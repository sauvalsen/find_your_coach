<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">


        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
     
        
        <link href="{{ asset('asset_front/css/style.css') }}" rel="stylesheet"/>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <li><a href="{{ path('app_homepage') }}">LOGO</a></li>
            <nav>
                <ul>
                    <li><a href="{{ path('app_homepage') }}">Page d'accueil</a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <li><a href="{{ path('app_admin') }}">Back-office</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="#">Gérer les réservation</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="#">Mon compte</a></li>
                            <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                        {% endif %}
                    {% else %}
                        <li><a href="{{ path('app_homepage') }}">Inscription</a></li>
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        
    {% block body %}{% endblock %}
