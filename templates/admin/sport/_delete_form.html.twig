<form method="post" action="{{ path('admin_sport_delete', {'id': sport.id}) }}" onsubmit="return confirm('Confirmer la suppression du sport.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sport.id) }}">
    <button class="bouton-supprimer btn btn-danger" type="submit">
        Supprimer
    </button>
</form>
