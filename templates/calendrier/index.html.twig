{% extends 'base.html.twig' %}

{% block title %}Calendrier index{% endblock %}

{% block body %}
    <h1>Calendrier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Id_coach</th>
                <th>Id_sportif</th>
                <th>Titre</th>
                <th>Created_at</th>
                <th>Modified_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendrier in calendriers %}
            <tr>
                <td>{{ calendrier.id }}</td> 
                <td>{{ calendrier.startDate ? calendrier.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendrier.endDate ? calendrier.endDate|date('Y-m-d H:i:s') : '' }}</td>
                
                
                <td>
                {% if calendrier.coach is not empty %}
                    {{ calendrier.coach.nom }}
                {% endif %}
                </td>
                <td>{{ calendrier.sportif.nom }}</td>
             
                <td>{{ calendrier.titre }}</td>
                <td>{{ calendrier.createdAt ? calendrier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendrier.modifiedAt ? calendrier.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('calendrier_show', {'id': calendrier.id}) }}">show</a>
                    <a href="{{ path('calendrier_edit', {'id': calendrier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('calendrier_new') }}">Create new</a>
{% endblock %}
