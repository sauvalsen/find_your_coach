{% extends 'back.html.twig' %}
{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
       $(document).ready(function() {
        // you may need to change this code if you are not using Bootstrap Datepicker
        $('.js-datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
    </script>
{% endblock %}

{% block title %}Calendrier index{% endblock %}

{% block body %}
    <h1>Calendrier index</h1>

<div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-40">
        <table class="table table-borderless table-striped table-earning">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Start_date</th>
                    <th>End_date</th>
                    <th>Id_coach</th>
                    <th>Id_sportif</th>
                    <th>Titre</th>
                    <th>Created_at</th>
                    <th>Modified_at</th>
                </tr>
            </thead>
            <tbody>
            {% for calendrier in calendriers %}
                <tr>
                    <td><a href="{{ path('calendrier_edit', {'id': calendrier.id}) }}"><i class="zmdi zmdi-settings"></i></a> </td>
                    <td><a href="{{ path('calendrier_show', {'id': calendrier.id}) }}">{{ calendrier.id }}</a></td>
                    <td>{{ calendrier.id }}</td>
                    <td>{{ calendrier.startDate ? calendrier.startDate|date('d-m-Y H:i:s') : '' }}</td>
                    <td>{{ calendrier.endDate ? calendrier.endDate|date('d-m-Y H:i:s') : '' }}</td>



                    <td>
                    {% if calendrier.coach is not empty %}
                        {{ calendrier.coach.nom }}
                    {% endif %}
                    </td>
                     <td>{% if calendrier.sportif is not empty %}
                    {{ calendrier.sportif.nom }}
                     {% endif %}
                  </td>
                    <td>{{ calendrier.titre }}</td>
                    <td>{{ calendrier.createdAt ? calendrier.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                    <td>{{ calendrier.modifiedAt ? calendrier.modifiedAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

    <a href="{{ path('calendrier_new') }}">Create new</a>
{% endblock %}
