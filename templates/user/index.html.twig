{% extends 'back.html.twig' %}

{% block title %}Index utilisateur{% endblock %}

{% block body %}
    <h1>Gérer les utilisateurs</h1>
    <div class="col-lg-12">
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Code_postal</th>
                    <th>Ville</th>
                    <th>Tel</th>
                    <th>Diplome</th>
                    <th>Sexe</th>
                    <th>Niveau</th>
                    <th>Created_at</th>
                    <th>Modified_at</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}

                    <tr>
                        <td><a href="{{ path('user_edit', {'id': user.id}) }}"><i class="zmdi zmdi-settings"></i></a> </td>
                        <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.id }}</a></td>
                        <td>{{ user.email }}</td>
                        <td></td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.adresse }}</td>
                        <td>{{ user.codePostal }}</td>
                        <td>{{ user.ville }}</td>
                        <td>{{ user.tel }}</td>
                        <td>{{ user.diplome }}</td>
                        <td>{{ user.sexe }}</td>
                        <td>{{ user.niveau }}</td>
                        <td>{{ user.createdAt ? user.createdAt|date('d-m-Y / H:i') : '' }}</td>
                        <td>{{ user.modifiedAt ? user.modifiedAt|date('d-m-Y / H:i') : '' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="18">Aucune donnée disponible.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <a href="{{ path('user_new') }}">Créer un utilisateur</a>
{% endblock %}
        {% block javascripts %}{% endblock %}