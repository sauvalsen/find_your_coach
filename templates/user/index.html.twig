{% extends '@AdminBundle/base.html.twig' %}

{% block title %}Index utilisateur{% endblock %}

{% block stylesheets %}{{ parent() }}{% endblock %}

{% block page_title %}Gestion des utilisateurs{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="index-user table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th></th>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Adresse</th>
                        <th>Code postal</th>
                        <th>Ville</th>
                        <th>Téléphone</th>
                        <th>Diplôme</th>
                        <th>Niveau</th>
                        <th>Date de création</th>
                        <th>Date de modification</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="zmdi zmdi-settings"></i></a> </td>
                            <td><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.id }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role }}
                                {% endfor %}
                            </td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.adresse }}</td>
                            <td>{{ user.codePostal }}</td>
                            <td>{{ user.ville }}</td>
                            <td>{{ user.tel }}</td>
                            <td>{{ user.diplome }}</td>
                            <td>{{ user.niveau }}</td>
                            <td>{{ user.createdAt ? user.createdAt|date('d-m-Y / H:i') : '' }}</td>
                            <td>{{ user.modifiedAt ? user.modifiedAt|date('d-m-Y / H:i') : '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="18">Aucune donnée disponible.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="pagination">
        {{ knp_pagination_render(users) }}
    </div>

    <a class="bouton-inex-user" href="{{ path('admin_user_new') }}">Créer un utilisateur</a>
    
{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}