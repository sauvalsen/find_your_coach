{% extends '@AdminBundle/base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin=""/>
{% endblock %}

{% block page_title %}Profil utilisateur{% endblock %}

{% block content %}
    <h1 class="title-user">{{ user.prenom }} {{ user.nom }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>

                <th>Téléphone</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.codePostal }}</td>

                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
                <th>Diplôme</th>
                <td>{{ user.diplome }}</td>

                <th>Niveau</th>
                <td>{{ user.niveau }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{{ asset('uploads/avatars/' ~ user.avatar) | imagine_filter('my_thumb') }}"></td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>

                <th>Date de modification</th>
                <td>{{ user.modifiedAt ? user.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div id="mymap" data-lat="{{ user.lat }}" data-lng="{{ user.lng }}"></div>

    <a class="bouton-perso-user" href="{{ path('admin_user_index') }}">Retour a la liste</a>

    <a class="bouton-perso-user" href="{{ path('admin_user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js" integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og==" crossorigin=""></script>
    <script src="{{ asset('asset_back/js/map.js') }}"></script>
{% endblock %}
